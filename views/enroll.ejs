<!DOCTYPE html>
<html lang="en">

  <%- include('./partials/header') %>

<body>

  <%- include('./partials/nav') %>

  <div class="content">

    <%- include('partials/sidebar') %>

    <main>

      <h1>Enroll Student for Subjects</h1>
  
      <% subjects.forEach(subject => { %>
        <form class="enroll-subject" action="" method="post">
          <div><h3><%= subject.subject_name %></h3></div>
          <div class="invisible-form">
            <label for="student_id">Student ID:</label>
            <input type="text" name="student_id" value=<%= id %> >
            <input type="text" name="subject_name" value=<%= subject.subject_name %> >
            <input type="text" name="subject_id" value="<%= subject._id %>" >
          </div>
          
          <button>enroll</button>
  
        </form>
  
      <% }) %>
      
    </main>
  
  </div>

  <%- include('./partials/footer') %>

</body>
</html>